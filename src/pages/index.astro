    <div class="gap-4 grid">
      <h2 class="text-3xl font-bold">Tech</h2>
      <hr class="border-neutral-800" />
      <Tech />
    </div>
    <div class="gap-4 grid mt-12">
      <h2 class="text-3xl font-bold">Featured Projects</h2>
      <hr class="border-neutral-800" />
