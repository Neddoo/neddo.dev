---
import { Icon } from "astro-icon/components";
const {title, icon} = Astro.props;
---

<div class="group p-3 border-2 my-auto border-neutral-800 rounded-[.75em] hover:border-neutral-700 hover:bg-neutral-800 duration-200 text-neutral-400 flex">
  <Icon
    class="w-8 h-8 group-hover:text-white duration-200"
    name={icon}
  />
  <p class="my-auto ml-3 font-bold group-hover:text-white duration-200">{title}</p>
</div>
